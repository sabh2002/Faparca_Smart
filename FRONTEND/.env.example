# Copia este archivo a .env y configura según tu entorno

# Configuración del entorno
VITE_APP_TITLE=Sistema OEE FAPARCA
VITE_API_BASE_URL=http://localhost:8000/api
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# Para producción, cambiar a:
# VITE_API_BASE_URL=https://api.tudominio.com/api
# VITE_APP_ENV=production

# Configuración de autenticación
VITE_TOKEN_STORAGE_KEY=auth_token
VITE_USER_STORAGE_KEY=user_data
VITE_TOKEN_REFRESH_INTERVAL=3600000

# Configuración de tiempo de sesión (en milisegundos)
VITE_SESSION_TIMEOUT=86400000  # 24 horas
VITE_SESSION_WARNING_TIME=300000  # Advertencia 5 minutos antes

# Features flags
VITE_ENABLE_DEBUG=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=true

# Configuración de paginación
VITE_DEFAULT_PAGE_SIZE=50
VITE_MAX_PAGE_SIZE=100

# Configuración de reintentos de red
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=1000

# URLs de recursos
VITE_ASSETS_URL=/assets
VITE_PUBLIC_URL=/
